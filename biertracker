<!DOCTYPE html>
<html>
<head>
    <title>Cola Tracker</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; }
        .container { max-width: 400px; margin: auto; }
        select, button { margin: 10px; padding: 5px; }
    </style>
    <script>
        function addDrink() {
            let user = document.getElementById("user").value;
            let amount = parseInt(document.getElementById("amount").value);
            
            if (!user) {
                alert("Bitte wähle einen Namen!");
                return;
            }
            
            let total = localStorage.getItem(user) ? parseInt(localStorage.getItem(user)) : 0;
            total += amount;
            localStorage.setItem(user, total);
            updateStats();
        }
        
        function updateStats() {
            let statsDiv = document.getElementById("stats");
            statsDiv.innerHTML = "<h2>Trinkstatistik</h2>";
            for (let i = 0; i < localStorage.length; i++) {
                let user = localStorage.key(i);
                let total = localStorage.getItem(user);
                statsDiv.innerHTML += `<p><strong>${user}</strong>: ${total} ml</p>`;
            }
        }
        
        function resetData() {
            localStorage.clear();
            updateStats();
        }
        
        window.onload = updateStats;
    </script>
</head>
<body>
    <div class="container">
        <h1>Cola Tracker</h1>
        <label for="user">Wähle deinen Namen:</label>
        <select id="user">
            <option value="">-- Wähle --</option>
            <option value="Alex">Alex</option>
            <option value="Ben">Ben</option>
            <option value="Charlie">Charlie</option>
        </select>
        <br>
        <label for="amount">Wähle die Menge:</label>
        <select id="amount">
            <option value="250">250 ml</option>
            <option value="500">500 ml</option>
            <option value="1000">1 L</option>
        </select>
        <br>
        <button onclick="addDrink()">Hinzufügen</button>
        <button onclick="resetData()">Reset</button>
        <div id="stats"></div>
    </div>
</body>
</html>
